<h1>All Gooch Players</h1>
	<% @users.each do |user| %>
		<ul class="listing center">
			<div class="row">
				<div class="well col-xs-offset-2 col-xs-8">
					<li><%= link_to gravatar_for(user), user_path(user) %></li>
					<li class="game-type">
						<%= link_to user.username, user_path(user) %>
					</li>
					<li><small><%= pluralize(user.games.count, "game") if user.games %></small></li>
					<% if logged_in? and current_user.admin? %>
						<li><%= link_to "Delete this user", user_path(user), method: :delete, data: { confirm: "Are you sure you want to delete this user and all associated games?" } %></li>
					<% end %>
				</div>
			</div>
		</ul>
	<% end %>
	<div class="center">
		<%= will_paginate %>
	</div>