<h2>Game: <%= @game.type_of_game %></h2>
<div class="well show-game col-xs-8 col-xs-offset-2">
	<h4 class="center"><strong>Game Number: </strong><%= @game.number %></h4>
		<div class="game-actions center">
			<%= link_to "View all games", games_path, class: "btn btn-xs btn-success" %>
			<%= link_to "Edit this game", edit_game_path(@game), class: "btn btn-xs btn-primary" %>
			<%= link_to "Delete Game", game_path(@game), method: :delete, data: {confirm: "Are you sure you want to delete this game?"}, class: "btn btn-xs btn-danger" %>
		</div>
</div>